<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_categories">

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.tayyab.mobileapp.admin.CategoriesFragment"
        android:label="@string/categories"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/nav_products"
        android:name="com.tayyab.mobileapp.admin.ProductsFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_products" />
    <activity
        android:id="@+id/nav_shop"
        android:name="com.tayyab.mobileapp.activities.MainActivityShop"
        android:label="Shop"
        tools:layout="@layout/app_bar_main_activity_shop" />
    <dialog android:id="@+id/nav_logout"
        android:name="com.tayyab.mobileapp.dialogs.AppDialogFragment"/>

</navigation>